<button class="go-back" onclick="history.back()">
    <svg
        xmlns="http://www.w3.org/2000/svg"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="lucide lucide-arrow-left"
    >
        <path d="m12 19-7-7 7-7" />
        <path d="M19 12H5" />
    </svg>
</button>
<div class="character-details-container">
    <h2 class="character-name">
        Character showcase: <%= characterDetails.name %>
    </h2>
    <img
        src="<%= characterDetails.image_full %>"
        alt="<%= characterDetails.name %>"
    />
    <h4 class="path">Path: <%= characterDetails.text %></h4>
    <h4 class="element">Element: <%= characterDetails.element %></h4>
    <div class="rarity">
        Rarity: <%= characterDetails.rarity %>
        <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="lucide lucide-star"
        >
            <path
                d="M11.525 2.295a.53.53 0 0 1 .95 0l2.31 4.679a2.123 2.123 0 0 0 1.595 1.16l5.166.756a.53.53 0 0 1 .294.904l-3.736 3.638a2.123 2.123 0 0 0-.611 1.878l.882 5.14a.53.53 0 0 1-.771.56l-4.618-2.428a2.122 2.122 0 0 0-1.973 0L6.396 21.01a.53.53 0 0 1-.77-.56l.881-5.139a2.122 2.122 0 0 0-.611-1.879L2.16 9.795a.53.53 0 0 1 .294-.906l5.165-.755a2.122 2.122 0 0 0 1.597-1.16z"
            />
        </svg>
    </div>
    <p class="description"><%= characterDetails.description %></p>
    <div class="buttons-container">
        <a class="edit" href="/characters/<%= characterDetails.id %>/edit">
            Edit
        </a>
        <a class="delete">Delete</a>
    </div>
</div>
